<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical"
	tools:context="com.xidian.xienong.agriculture.find.DetailActivity"
	>
	<android.support.design.widget.AppBarLayout
		android:id="@+id/app_bar_1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay"
		tools:layout_editor_absoluteY="0dp"
		tools:layout_editor_absoluteX="8dp"
		tools:ignore="MissingConstraints">
		<android.support.v7.widget.Toolbar
			android:id="@+id/machine_detail_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:layout_scrollFlags="scroll|enterAlways"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
			app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
			app:title="农机详情"
			app:titleTextColor="@android:color/white" />
	</android.support.design.widget.AppBarLayout>
    <com.xidian.xienong.util.DropZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

		>

           <LinearLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:orientation="vertical"
			   >
			   <ImageView
				   android:id="@+id/iv_detail_picture"
				   android:layout_width="match_parent"
				   android:layout_height="180dp"
				   android:layout_gravity="center"
				   android:visibility="gone"
				   android:src="@drawable/author" />
			   <RelativeLayout
				   android:id="@+id/rl_detail_picture"
				   android:visibility="visible"
				   android:layout_width="match_parent"
				   android:layout_height="wrap_content"
				   android:layout_marginTop="-40dp">

				   <TextView
					   android:id="@+id/detail_numofpic"
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:text="4张效果图"
					   android:background="#895e4200"
					   android:padding="10dp"
					   android:layout_alignParentRight="true"
					   android:textColor="#ffffff" />
			   </RelativeLayout>




	        <RelativeLayout
		        android:id="@+id/rl_detail_name" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp">
		        <TextView
		            android:id="@+id/detail_name" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="10dp"
		            android:text="机主名字"
		            android:textSize="18sp"/>
		         <TextView
			        android:id="@+id/tv_detail_name"
			        android:layout_toRightOf="@id/detail_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="10dp"
			        android:hint="小李"
			        android:textColor="@color/gray"
			        android:textSize="16sp"/>
		    </RelativeLayout>
		    <View
		        android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="@color/hui" />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp">
		        <TextView
		            android:id="@+id/worker_machine_address" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="10dp"
		            android:text="机主地址"
		            android:textSize="18sp"/>
		         <TextView
			        android:id="@+id/tv_worker_machine_address"
			        android:layout_toRightOf="@id/worker_machine_address"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="10dp"
			        android:hint="详细地址"
			        android:textColor="@color/gray"
			        android:textSize="16sp"/>
    		</RelativeLayout>
    		<View
		        android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="@color/hui" />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp">
		        <TextView
		            android:id="@+id/worker_machine_type" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="10dp"
		            android:text="农机类型"
		            android:textSize="18sp"/>
		         <TextView
			        android:id="@+id/tv_worker_machine_type"
			        android:layout_toRightOf="@id/worker_machine_type"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="10dp"
			        android:hint="收割机"
			        android:textColor="@color/gray"
			        android:textSize="16sp"/>
    		</RelativeLayout>
		    <View
		        android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="@color/hui" />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp">
		        <TextView
		            android:id="@+id/worker_machine_num" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="10dp"
		            android:text="农机数量"
		            android:textSize="18sp"/>
		         <TextView
			        android:id="@+id/tv_worker_machine_num"
			        android:layout_toRightOf="@id/worker_machine_num"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="10dp"
			        android:hint="3台"
			        android:textColor="@color/gray"
			        android:textSize="16sp"/>
		    </RelativeLayout>
		    <View
		        android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:background="@color/hui" />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp">
		        <TextView
		            android:id="@+id/worker_machine_price" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="10dp"
		            android:text="收费标准"
		            android:textSize="18sp"/>
		         <TextView
			        android:id="@+id/tv_worker_machine_price"
			        android:layout_toRightOf="@id/worker_machine_price"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="10dp"
			        android:hint="100元/亩"
			        android:textColor="@color/gray"
			        android:textSize="16sp"/>
		    </RelativeLayout>
		   
		    <RelativeLayout
		        android:id="@+id/rl_worker_machine_record" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:visibility="gone"
		        android:layout_marginTop="20dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp">
		        <TextView
		            android:id="@+id/worker_machine_record" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="预约记录"
		            android:textSize="18sp"/>
		        <ImageView
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:padding="5dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:scaleType="fitXY"
		            android:src="@drawable/go_next_arrow"/>
		        
    		</RelativeLayout>
		    <View
		        android:layout_width="fill_parent"
		        android:layout_height="0.2dp"
		        android:visibility="gone"
		        android:background="@color/hui" />
		    <RelativeLayout
		        android:id="@+id/rl_comment" 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:layout_marginTop="20dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp">
		        <TextView
		            android:id="@+id/worker_comment_detail" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="10dp"
		            android:layout_centerVertical="true"
		            android:text="评价详情"
		            android:textSize="18sp"/>
		        <ImageView
		            android:layout_width="30dp"
		            android:layout_height="30dp"
		            android:padding="5dp"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:scaleType="fitXY"
		            android:src="@drawable/go_next_arrow"/> 
		        
    		</RelativeLayout>
    		<RelativeLayout
		        android:id="@+id/rl_detail_message"  
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/chunbai"
		        android:layout_marginTop="20dp"
		        android:padding="10dp">
		        <TextView
		            android:id="@+id/detail_message" 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="农机简介或留言"
		            android:background="@color/chunbai"
		            android:textSize="18sp"/>
		    </RelativeLayout>
		    <View 
		        android:layout_width="fill_parent"
		        android:layout_height="60dp"/>
</LinearLayout>
	</com.xidian.xienong.util.DropZoomScrollView>
</LinearLayout>

