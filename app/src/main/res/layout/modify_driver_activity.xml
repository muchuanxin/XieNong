<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/WhiteSmoke"
	android:orientation="vertical">
	<android.support.design.widget.AppBarLayout
		android:id="@+id/app_bar_7"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay"
		tools:layout_editor_absoluteY="0dp"
		tools:layout_editor_absoluteX="8dp"
		tools:ignore="MissingConstraints">
		<android.support.v7.widget.Toolbar
			android:id="@+id/modify_driver_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:layout_scrollFlags="scroll|enterAlways"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
			app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
			app:title="修改司机信息"
			app:titleTextColor="@android:color/white" />
	</android.support.design.widget.AppBarLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chunbai"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
           android:id="@+id/modify_driver_name" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="10dp"
           android:text="司机姓名"
           android:textSize="18sp"/>
        <EditText
	        android:id="@+id/tv_modify_driver_name"
	        android:layout_toRightOf="@id/modify_driver_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="10dp"
	        android:hint="司机姓名"
	        android:textColor="@color/black"
	        android:background="@color/chunbai"
	        android:textSize="16sp"/>
 		</RelativeLayout>
 		<View
       android:layout_width="fill_parent"
       android:layout_height="0.2dp"
       android:background="@color/hui" />
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/chunbai">
        <TextView
           android:id="@+id/modify_driver_sex" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
       	   android:paddingBottom="10dp"
           android:paddingLeft="10dp"
           android:text="司机性别"
           android:textSize="18sp"/>
         <EditText
	        android:id="@+id/tv_modify_driver_sex"
	        android:layout_toRightOf="@id/modify_driver_sex"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="10dp"
	        android:hint="司机性别"
			android:textColor="@color/gray"
		    android:enabled="false"
	        android:background="@color/chunbai"
	        android:textSize="16sp"/>
	</RelativeLayout>
 	<View
       android:layout_width="fill_parent"
       android:layout_height="0.2dp"
       android:background="@color/hui" />
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/chunbai"
       android:paddingTop="10dp"
       android:paddingBottom="10dp">
        <TextView
           android:id="@+id/modify_driver_tele" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="10dp"
           android:text="联系电话"
           android:textSize="18sp"/>
        <EditText
	        android:id="@+id/tv_modify_driver_tele"
	        android:layout_toRightOf="@id/modify_driver_tele"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="10dp"
	        android:hint="联系电话"
			android:enabled="false"
	        android:textColor="@color/black"
	        android:background="@color/chunbai"
	        android:textSize="16sp"/>
	</RelativeLayout>
	<View
       android:layout_width="fill_parent"
       android:layout_height="0.2dp"
       android:background="@color/hui" />
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/chunbai"
       android:paddingTop="10dp"
       android:paddingBottom="10dp">
         <TextView
           android:id="@+id/modify_driver_identification" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="10dp"
           android:text="身份证号"
           android:textSize="18sp"/>
        <EditText
	        android:id="@+id/tv_modify_driver_identification"
	         android:layout_toRightOf="@id/modify_driver_identification"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="10dp"
	        android:hint="身份证号"
	        android:textColor="@color/gray"
	        android:background="@color/chunbai"
	        android:textSize="16sp"/>
	</RelativeLayout>
 	<Button 
       android:id="@+id/btn_modify_driver"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:text="确定"
	   android:textSize="18sp"
       android:textColor="@color/chunbai"
       android:background="@drawable/verify_corner"/>
	<Button
		android:id="@+id/btn_delete_driver"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="10dp"
		android:text="删除司机"
		android:textSize="18sp"
		android:textColor="@color/chunbai"
		android:background="@drawable/corner"/>
    <View 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"/>
    

</LinearLayout>

