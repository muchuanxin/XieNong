<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.xidian.xienong.agriculture.resource.MachineDetailActivity">
	<android.support.design.widget.AppBarLayout
		android:id="@+id/app_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay"
		tools:layout_editor_absoluteY="0dp"
		tools:layout_editor_absoluteX="8dp"
		tools:ignore="MissingConstraints">
		<android.support.design.widget.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/AppTheme.AppBarOverlay"
			tools:layout_editor_absoluteY="0dp"
			tools:layout_editor_absoluteX="8dp"
			tools:ignore="MissingConstraints">
			<android.support.v7.widget.Toolbar
				android:id="@+id/machine_detail_toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:layout_scrollFlags="scroll|enterAlways"
				app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
				app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
				app:title="农机信息"
				app:titleTextColor="@android:color/white" >
				<Button
					android:id="@+id/btn_modify"
					android:layout_width="wrap_content"
					android:layout_height="?attr/actionBarSize"
					android:background="@null"
					android:textSize="18sp"
					android:text="修改"
					android:layout_gravity="end"
					android:textColor="@android:color/white" />
			</android.support.v7.widget.Toolbar>
		</android.support.design.widget.AppBarLayout>
	</android.support.design.widget.AppBarLayout>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/WhiteSmoke" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:orientation="vertical" >
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:layout_marginTop="20dp"
				android:padding="10dp">
				<TextView
					android:id="@+id/tv_machine_state"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="农机状态"
					android:textSize="18sp"/>
				<TextView
					android:id="@+id/register_machine_state"
					android:layout_toRightOf="@id/tv_machine_state"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:hint="审核中"
					android:textColor="@color/red"
					android:textSize="16sp"/>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:layout_marginTop="20dp"
				android:padding="10dp">
				<TextView
					android:id="@+id/tv_machine_detail_address"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="农机地址"
					android:textSize="18sp"/>
				 <ImageView
					android:id="@+id/machine_address_detail_located"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_marginRight="10dp"
					android:layout_marginLeft="10dp"
					android:src="@drawable/locate"
					android:scaleType="fitXY"
					android:layout_alignParentRight="true"
					android:visibility="visible" />
				<TextView
					android:id="@+id/tv_machine_detail_address_1"
					android:layout_toRightOf="@id/tv_machine_detail_address"
					android:layout_toLeftOf="@id/machine_address_detail_located"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:hint="地区信息"
					android:textColor="@color/gary"
					android:textSize="16sp"/>
			</RelativeLayout>
			<View
				android:id="@+id/line"
				android:layout_width="fill_parent"
				android:layout_height="0.2dp"
				android:visibility="gone"
				android:background="@color/hui" />
			<RelativeLayout
				android:id="@+id/rl_machine_detail_address2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:visibility="gone"
				android:padding="10dp">
				<TextView
					android:id="@+id/machine_detail_address"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="详细地址"
					android:textSize="18sp"/>
				 <TextView
					android:id="@+id/tv_machine_detail_address_2"
					android:layout_toRightOf="@id/machine_detail_address"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="10dp"
					android:hint="详细地址"
					android:textColor="@color/gray"
					android:textSize="16sp"/>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:layout_marginTop="20dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp">
				<TextView
					android:id="@+id/tv_published_machine_detail_type"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:paddingLeft="10dp"
					android:text="农机类型"
					android:textSize="18sp"/>
				<TextView
					android:id="@+id/tv_published_machine_detail_type_1"
					android:layout_toRightOf="@id/tv_published_machine_detail_type"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:hint="农机种类"
					android:textColor="@color/gary"
					android:clickable="true"
					android:textSize="16sp"/>
			</RelativeLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="0.2dp"
				android:background="@color/hui" />
			 <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:paddingTop="10dp"
				android:paddingBottom="10dp">
				<TextView
					android:id="@+id/tv_machine_detail_brand"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:paddingLeft="10dp"
					android:text="农机品牌"
					android:textSize="18sp"/>
				<TextView
					android:id="@+id/tv_machine_detail_brand_1"
					android:layout_toRightOf="@id/tv_machine_detail_brand"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:background="@color/chunbai"
					android:hint="谷雨牌"
					android:textColor="@color/gary"
					android:textSize="16sp"/>
			</RelativeLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="0.2dp"
				android:background="@color/hui" />
			 <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:paddingTop="10dp"
				android:paddingBottom="10dp">
				<TextView
					android:id="@+id/tv_machine_detail_number"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:paddingLeft="10dp"
					android:text="农机数量"
					android:textSize="18sp"/>
				<EditText
					android:id="@+id/tv_machine_detail_number_1"
					android:layout_toRightOf="@id/tv_machine_detail_number"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:background="@color/chunbai"
					android:hint="单位为台"
					android:textColor="@color/gary"
					android:textSize="16sp"/>
			</RelativeLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="0.2dp"
				android:background="@color/hui" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:paddingTop="10dp"
				android:paddingBottom="10dp">
				<TextView
					android:id="@+id/tv_detail_price"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:paddingLeft="10dp"
					android:text="收费标准"
					android:textSize="18sp"/>
				<EditText
					android:id="@+id/detail_price"
					android:layout_toRightOf="@id/tv_detail_price"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_centerVertical="true"
					android:layout_marginLeft="20dp"
					android:hint="单位为元/亩"
					android:textColor="@color/black"
					android:textSize="16sp"
					android:background="@color/chunbai"/>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/rl_machine_detail_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:layout_marginTop="20dp"
				android:padding="10dp">
				<EditText
					android:id="@+id/machine_detail_message"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="农机简介或留言"
					android:background="@color/chunbai"
					android:textColor="@color/gary"
					android:textSize="18sp"/>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/rl_detail_camera"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/chunbai"
				android:layout_marginTop="20dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp">
				<ImageView
					android:id="@+id/iv_detail_camera"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginRight="10dp"
					android:scaleType="fitXY"
					android:src="@drawable/icon_camera"
					android:visibility="visible" />
				<TextView
					android:layout_toLeftOf="@id/iv_detail_camera"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:paddingLeft="10dp"
					android:text="点击此处上传农机图片"
					android:textSize="18sp"/>
			</RelativeLayout>
			<GridView
				android:id="@+id/detail_noScrollgridview"
				android:background="@color/chunbai"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:layout_marginTop="10dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="20dp"
				android:paddingRight="20dp"
				android:horizontalSpacing="3dp"
				android:numColumns="3"
				android:scrollbars="none"
				android:listSelector="@color/transparent"
				android:visibility="gone"
				android:verticalSpacing="5dp" >
			</GridView>
			<!--  <View
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"/> -->

		<com.xidian.xienong.util.NoScrollListView
			android:id="@+id/detail_machine_listview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:dividerHeight="3dp"
			android:listSelector="@color/white"
			android:divider="@color/transparent"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>



