<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xidian.xienong.home.HomePageActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <com.xidian.xienong.util.ListenedScrollView
        android:id="@+id/homepage_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/homepage_ad"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical" >
                <android.support.v4.view.ViewPager
                    android:id="@+id/homepage_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />
                <LinearLayout
                    android:id="@+id/homepage_viewGroups"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_headline"
                android:layout_below="@id/homepage_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                   android:id="@+id/machine_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="农机头条"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"/>
                <com.xidian.xienong.util.MarqueeView
                    android:id="@+id/headline"
                    android:layout_toRightOf="@id/machine_head"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    app:mvAnimDuration="1000"
                    app:mvInterval="3000"
                    app:mvTextColor="@android:color/black"
                    app:mvTextSize="16sp">
                </com.xidian.xienong.util.MarqueeView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_machine_entrance"
                android:layout_below="@id/rl_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:background="@mipmap/homepage_agriculture"/>
                <TextView
                    android:id="@+id/machine_entrance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:text="@string/machine_tagline"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_below="@id/ll_machine_entrance"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:id="@+id/ll_shoppingmall"
                android:layout_below="@id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:background="@mipmap/homepage_shopping"/>
                <TextView
                    android:id="@+id/shopping_entrance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:text="@string/mall_tagline"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>
            <com.xidian.xienong.util.ViewUpSearch
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">
            </com.xidian.xienong.util.ViewUpSearch>
            <View
                android:layout_below="@id/ll_shoppingmall"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </RelativeLayout>
    </com.xidian.xienong.util.ListenedScrollView>
</LinearLayout>