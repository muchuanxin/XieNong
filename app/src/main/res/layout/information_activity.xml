<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/WhiteSmoke"
	android:orientation="vertical"

	>
	<android.support.design.widget.AppBarLayout
		android:id="@+id/app_bar_6"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay"
		tools:layout_editor_absoluteY="0dp"
		tools:layout_editor_absoluteX="8dp"
		tools:ignore="MissingConstraints">
		<android.support.v7.widget.Toolbar
			android:id="@+id/information_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:layout_scrollFlags="scroll|enterAlways"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
			app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
			app:title="个人信息"
			app:titleTextColor="@android:color/white" />
	</android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/rl_photo" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/chunbai"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="头像"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/go_next"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/go_next_arrow"/>
        <ImageView
	        android:id="@+id/information_headphoto"
	        android:layout_toLeftOf="@id/go_next"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/portrait"
	        android:scaleType="fitCenter" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="@color/hui" />
    <RelativeLayout
        android:id="@+id/rl_name"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chunbai"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="名字"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/go_next_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/go_next_arrow"/>
        <TextView
	        android:id="@+id/information_name"
	        android:layout_toLeftOf="@id/go_next"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="遇见Angel"
	        android:textSize="16sp"
	        android:textColor="@color/gray"/>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="@color/hui" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chunbai"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="帐号"
            android:textSize="18sp"/>
        <TextView
	        android:id="@+id/information_tele"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:text="18729228245"
	        android:textSize="16sp"
	        android:textColor="@color/gray"/>
    </RelativeLayout>
    
    

</LinearLayout>
