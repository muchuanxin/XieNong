<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/yunfei"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="运费"/>
        <TextView
            android:id="@+id/mall_order_tran_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginRight="20dp"
            android:text="¥10.00"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right|center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/mall_order_comm_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="共2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="件商品 合计："/>
        <TextView
            android:id="@+id/mall_order_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_gravity="center"
            android:text="¥200.00"/>
        <TextView
            android:id="@+id/mall_order_include_tran_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(含运费¥10.00)"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mall_order_delete_1"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingLeft="2dp"
            android:paddingTop="3dp"
            android:background="@drawable/mall_order_opt_corner"
            android:text="删除订单"/>
        <TextView
            android:id="@+id/mall_order_trans_2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingLeft="2dp"
            android:paddingTop="3dp"
            android:background="@drawable/mall_order_opt_corner"
            android:text="查看物流"/>
        <TextView
            android:id="@+id/mall_order_evaluate_3"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:paddingLeft="2dp"
            android:paddingTop="3dp"
            android:background="@drawable/mall_order_opt_corner"
            android:text="评价"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>

</LinearLayout>
