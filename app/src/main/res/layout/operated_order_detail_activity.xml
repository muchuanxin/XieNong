<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xidian.xienong.agriculture.order.OperatedOrderDetailActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <android.support.v7.widget.Toolbar
            android:id="@+id/operated_order_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:title="订单详情"
            app:titleTextColor="@android:color/white" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteSmoke"
        android:orientation="vertical" >
        <com.xidian.xienong.util.DropZoomScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="订单编号"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/operated_order_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="18729228245"
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/hui" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="订单状态"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/operated_order_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="待接单"
                        android:textSize="16sp"
                        android:textColor="@color/orange"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/operated_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="农田地址"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_operated_detail_address_1"
                        android:layout_toRightOf="@id/operated_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="详细地址"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/hui" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/operated_machine_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="农机类型"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_operated_machine_type_1"
                        android:layout_toRightOf="@id/operated_machine_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="收割机"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/hui" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/operated_reservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="预约时间"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_operated_reservation_1"
                        android:layout_toRightOf="@id/operated_reservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="2016-12-12"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/hui" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/operated_crop_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="农田类型"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_operated_crop_type_1"
                        android:layout_toRightOf="@id/operated_crop_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="平原"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/hui" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/operated_crop_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="农田亩数"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_operated_crop_num_1"
                        android:layout_toRightOf="@id/operated_crop_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="3亩"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <ListView
                    android:id="@+id/operated_resource_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:dividerHeight="1dp"
                    android:listSelector="@android:color/white"
                    android:divider="@android:color/transparent">
                </ListView>
                <LinearLayout
                    android:id="@+id/show_operated_cancle_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/show_operated_cancle_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="11月6号，订单已取消"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/show_operated_cancle_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="订单已取消"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </com.xidian.xienong.util.DropZoomScrollView>
    </LinearLayout>



</LinearLayout>