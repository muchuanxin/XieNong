<?xml version="1.0" encoding="utf-8"?>
<com.xidian.xienong.util.GradationScrollView
    android:id="@+id/top_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_commodity_detail_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/li"
            android:visibility="visible" />
        <LinearLayout
            android:id="@+id/ll_commodity_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_commodity_detail_name"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="日本卡乐比Calbee Jagabee 薯条三兄弟 淡盐味" />
            <TextView
                android:id="@+id/tv_commodity_detail_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="90g/包" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_commodity_detail_sale_price"
                    style="@style/colorPrimaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48元" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_tinyer">

                    <TextView
                        android:id="@+id/tv_good_detail_on_shelves_price"
                        style="@style/greyTextStyleSmaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/spacing_tinyer"
                        android:paddingRight="@dimen/spacing_tinyer"
                        android:text="159" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_alignLeft="@+id/tv_good_detail_on_shelves_price"
                        android:layout_alignRight="@+id/tv_good_detail_on_shelves_price"
                        android:layout_centerVertical="true"
                        android:background="@color/deep_transparent" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tinyer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_detail_expense"
                    style="@style/greyTextStyleSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="快递：12.00" />

                <TextView
                    android:id="@+id/tv_good_detail_month_sale"
                    style="@style/greyTextStyleSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1321人付款" />

                <TextView
                    android:id="@+id/tv_good_detail_producing_area"
                    style="@style/greyTextStyleSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="日本大阪" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_smaller"
            android:background="@color/grey_line_bg" />

        <!--
        <TextView
            android:background="@drawable/list_gray_item"
            android:id="@+id/tv_good_detail_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right"
            android:padding="@dimen/spacing_small"
            android:text="选择  产品分类" />
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_line_bg"/>
        -->
        <TextView
            android:background="@drawable/list_gray_item"
            android:id="@+id/tv_good_detail_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_right"
            android:padding="@dimen/spacing_small"
            android:text="产品参数" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_smaller"
            android:background="@color/grey_line_bg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品评价" />
            <LinearLayout
                android:id="@+id/ll_comment_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_smaller"
                android:orientation="horizontal">
                <com.xidian.xienong.util.CircleImageView
                    android:id="@+id/comment_person_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_smallest"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/comment_person_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="谢依霖" />
                        <LinearLayout
                            android:id="@+id/comment_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/iv_start_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/da_ren_list_star" />
                            <ImageView
                                android:id="@+id/iv_start_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_tinyest"
                                android:src="@drawable/da_ren_list_star" />
                            <ImageView
                                android:id="@+id/iv_start_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_tinyest"
                                android:src="@drawable/da_ren_list_star" />
                            <ImageView
                                android:id="@+id/iv_start_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_tinyest"
                                android:src="@drawable/da_ren_list_star" />
                            <ImageView
                                android:id="@+id/iv_start_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_tinyest"
                                android:src="@drawable/da_ren_list_star" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_comment_time"
                        style="@style/greyTextStyleSmaller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tinyest"
                        android:text="2016年04月" />

                    <TextView
                        android:id="@+id/tv_comment_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tinyest"
                        android:text="第二次来找这个零食了，第一次吃就开始爱上了，还是跟原来一样的味道" />

                    <TextView
                        style="@style/greyTextStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_tinyest"
                        android:visibility="gone"
                        android:text="颜色分类：原味" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_tiny"
                android:paddingTop="@dimen/spacing_tiny"
                android:paddingRight="@dimen/spacing_smallest"
                android:paddingLeft="@dimen/spacing_smallest"
                android:background="@drawable/bg_border_color_primary"
                android:id="@+id/tv_comments_detail_open"
                style="@style/colorPrimaryTextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="查看全部评论" />
            <com.xidian.xienong.util.NoScrollListView
                android:id="@+id/nlv_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_normal_bg"
            android:padding="@dimen/spacing_smallest">
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_toLeftOf="@+id/tv_good_detail_tuodong"
                android:background="@color/deep_transparent" />
            <TextView
                android:id="@+id/tv_good_detail_tuodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="继续拖动,查看图文详情"
                android:textSize="@dimen/font_small" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_toRightOf="@+id/tv_good_detail_tuodong"
                android:background="@color/deep_transparent" />
        </RelativeLayout>
    </LinearLayout>
</com.xidian.xienong.util.GradationScrollView>