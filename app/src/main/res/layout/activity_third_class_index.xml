<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <RelativeLayout
        android:id="@+id/mcx_third_class_index_status_bar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/mcx_third_class_index_top_bar"
        android:layout_below="@id/mcx_third_class_index_status_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/mcx_third_class_index_back_btn"
            android:layout_width="35dp"
            android:layout_height="45dp">

            <Button
                android:layout_marginLeft="15dp"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:background="@drawable/leftarrow"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mcx_third_class_index_back_btn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="商品列表"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mcx_third_class_index_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mcx_third_class_index_top_bar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/search_top_background">

        <Button
            android:id="@+id/mcx_third_class_index_search_btn"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:background="@drawable/search_btn_background"
            android:text="搜索"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/mcx_third_class_index_search_btn">

            <EditText
                android:id="@+id/mcx_third_class_index_search_edit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:singleLine="true"
                android:background="@drawable/search_frame"
                android:layout_marginRight="10dp"
                android:paddingLeft="32dp"
                android:textSize="14dp"
                android:textCursorDrawable="@null"
                android:hint="搜索商品"/>

            <ImageView
                android:id="@+id/mcx_third_class_index_search_dele"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete"
                android:paddingRight="20dp"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/mcx_third_class_index_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mcx_third_class_index_search_bar">

    </FrameLayout>

</RelativeLayout>
