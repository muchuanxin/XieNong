<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <android.support.v7.widget.Toolbar
            android:id="@+id/announce_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:title="订单详情"
            app:titleTextColor="@android:color/white" />
    </android.support.design.widget.AppBarLayout>
    <com.xidian.xienong.util.DropZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:scaleType="fitXY"
                android:src="@drawable/author" />
            <RelativeLayout
                android:id="@+id/rl_picture"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp">

                <TextView
                    android:id="@+id/numofpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4张效果图"
                    android:background="#895e4200"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="您可在预约时间之前取消订单"
                    android:textColor="@color/red"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="订单编号"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="18729228245"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@color/hui" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="订单状态"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="待接单"
                    android:textSize="16sp"
                    android:textColor="@color/orange"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_machine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/machine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="机主名字"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_machine_name"
                    android:layout_toRightOf="@id/machine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="小李"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/line_1"
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@color/hui" />
            <RelativeLayout
                android:id="@+id/rl_machine_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/machine_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="机主电话"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_tele"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/btn_tel"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/tv_machine_telephone"
                    android:layout_toRightOf="@id/machine_telephone"
                    android:layout_toLeftOf="@id/iv_tele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="13991916115"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:id="@+id/line_2"
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@color/hui" />
            <RelativeLayout
                android:id="@+id/rl_operate_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/operate_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="作业司机"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_operate_driver"
                    android:layout_toRightOf="@id/operate_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="张三、李四"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="详细地址"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_detail_address_1"
                    android:layout_toRightOf="@id/detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="详细地址"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@color/hui" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/machine_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="农机类型"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_machine_type_1"
                    android:layout_toRightOf="@id/machine_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="收割机"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@color/hui" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="预约时间"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_reservation_1"
                    android:layout_toRightOf="@id/reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="2016-12-12"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@color/hui" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/crop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="农田类型"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_crop_type_1"
                    android:layout_toRightOf="@id/crop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="平原"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="@color/hui" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/crop_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="农田亩数"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_crop_num_1"
                    android:layout_toRightOf="@id/crop_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:hint="3亩"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/show_concel_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:paddingTop="10dp"
                android:text="对方发出取消该单的请求"
                android:textColor="@color/gray"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="取消"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/verify_corner"/>
            <Button
                android:id="@+id/btn_evaluate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="60dp"
                android:text="评价"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/verify_corner"/>
            <LinearLayout
                android:id="@+id/show_cancle_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/show_cancle_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="11月6号，订单已取消"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/show_cancle_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="订单已取消"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
    </com.xidian.xienong.util.DropZoomScrollView>



</LinearLayout>