<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xidian.xienong.agriculture.order.DispatchResourceActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <android.support.v7.widget.Toolbar
            android:id="@+id/dispatch_order_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:title="获取可派农机与司机"
            app:titleTextColor="@android:color/white" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/ll_two_listview_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/avaliable_machine_listView_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@android:color/white"
                android:dividerHeight="10dp"
                android:gravity="center"
                android:text="农机"
                android:textSize="18sp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/avaliable_driver_listView_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@android:color/white"
                android:text="司机"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_two_listview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/avaliable_machine_listView"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:dividerHeight="10dp"
                android:fadeScrollbars="false"
                android:listSelector="@android:color/white"
                android:divider="@android:color/transparent" />
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"/>
            <ListView
                android:id="@+id/avaliable_driver_listView"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:dividerHeight="10dp"
                android:fadeScrollbars="false"
                android:listSelector="@android:color/white"
                android:divider="@android:color/transparent" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:drawableLeft="@drawable/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:layout_centerInParent="true"
                android:text="添加"
                android:textSize="18sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/confirm_dispatch_machine_and_driver"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:id="@+id/down"
                android:scaleType="fitXY"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/down" />
            <ImageButton
                android:id="@+id/up"
                android:scaleType="fitXY"
                android:layout_toRightOf="@id/down"
                android:layout_marginLeft="80dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/up" />
        </RelativeLayout>


        <ListView
            android:id="@+id/dispatched_resource_listView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="2dp"
            android:listSelector="@android:color/white"
            android:divider="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/no_avaliable_resource"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_can_dispatched_resource"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="您已没有可派的资源"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请结束之前未完成的订单！"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/WhiteSmoke"/>
    </LinearLayout>



</LinearLayout>