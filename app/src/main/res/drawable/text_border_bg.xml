<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主体背景颜色值 -->
    <item>
        <shape>
            <gradient android:startColor="@color/colorPrimary" android:centerColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary" android:type="linear" android:angle="90"
                android:centerX="0.5" android:centerY="0.5" />
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
            <!-- 应该是圆角 -->
            <corners android:topLeftRadius="2dp" android:topRightRadius="2dp"/>
        </shape>
    </item>
</layer-list>